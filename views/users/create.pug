extends ../layout/layout
block content
    h1 Create user
    if(errors)
        each error in errors
            .alert.alert-danger= error
    
    form(action="/users/create" method="POST" class="form-group")
        label(for="name") Name:
        input#name(type="text" name="name" class="form-control mr-2" value= value ? value.name : "")
        label(for="phone") Phone:
        input#phone(type="text" name="phone" class="form-control mr-2" value= value ? value.phone : "")
        button(type="submit" class="btn btn-primary mt-2") Create